{{ 'main-video.css' | asset_url | stylesheet_tag }}

<section class="main-video">
    <div class="main-video__photo-wrapper">
        <video class="main-video__video" src="{{ section.settings.video_url }}" autoplay loop muted></video>
        <div class="main-video__gradient"></div>
    </div>
    <div class="main-video__browse">
            <h1 class="main-video__heading alex-murphy__80-50_400">{{ section.settings.heading }}</h1>
            <a class="main-video__link chakra-petch__20-25_700" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
        </div>
</section>

{% schema %}
{
    "name": "Main video",
    "tag": "section",
    "presets": [
        {
            "category": "home-page",
            "name": "Main video"
        }
    ],
    "settings": [
        {
            "type": "url",
            "id": "video_url",
            "label": "Video Url"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button link"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button text"
        }
    ],
    "blocks": []
}

{% endschema %}